<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/653/653021.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <%- include('partials/sidebar') %>
  <%- include('partials/header', { headerTitle: 'Noticias noticiosamente noticiosas' }) %>

  <!-- Contenido principal -->
  <div class="main-content">

    <!-- Buscador -->
    <form id="searchForm" action="/search" method="get" class="mb-4">
      <div class="input-group">
        <input type="text" name="term" class="form-control" placeholder="Buscar por título..." value="<%= search || '' %>">
        <button class="btn btn-primary" type="submit">Buscar</button>
      </div>
    </form>

    <!-- Noticia aleatoria destacada -->
    <% 
      // Filtrar noticias con imagen válida (excluye la de "sin imagen")
      const validNews = news.filter(n => n.image && n.image !== "https://easimages.basnop.com/default-image_600.png");
      if (validNews.length > 0) { 
        const randomHero = validNews[Math.floor(Math.random() * validNews.length)];
    %>
      <section class="hero mb-5">
        <div class="card mb-3 shadow-sm">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="<%= randomHero.image %>" class="img-fluid rounded-start" alt="<%= randomHero.title %>">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= randomHero.title %></h5>
                <p class="card-text"><%= randomHero.content %></p>
                <p class="text-secondary small"><%= randomHero.date %></p>
                <a href="/news/<%= randomHero.id %>" class="btn btn-primary btn-sm">Leer más</a>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% } %>

    <!-- Carruseles por jornada -->
    <% const jornadas = [
         { num: 1, fecha: "2025-10-28" },
         { num: 2, fecha: "2025-10-29" },
         { num: 3, fecha: "2025-10-30" }
       ]; %>

    <% jornadas.forEach(j => { 
         const noticiasJornada = news
           .filter(n => n.date === j.fecha && n.image !== "https://easimages.basnop.com/default-image_600.png")
           .sort(() => 0.5 - Math.random())
           .slice(0, 6);
         if (noticiasJornada.length > 0) { %>
      <section class="jornada-section mb-5">
        <h3 class="mb-3">Jornada <%= j.num %> - <%= j.fecha %></h3>

        <div id="carouselJornada<%= j.num %>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% for(let i = 0; i < noticiasJornada.length; i += 3) { 
                 const group = noticiasJornada.slice(i, i + 3); %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <div class="row g-4">
                  <% group.forEach(n => { %>
                    <div class="col-md-4 d-flex">
                      <div class="card shadow-sm flex-fill d-flex flex-column">
                        <img src="<%= n.image %>" class="card-img-top" style="object-fit: cover; height: 200px;" alt="<%= n.title %>">
                        <div class="card-body d-flex flex-column">
                          <h5 class="card-title"><%= n.title %></h5>
                          <p class="card-text text-truncate"><%= n.summary %></p>
                          <p class="text-secondary small mt-auto"><%= n.date %></p>
                          <a href="/news/<%= n.id %>" class="btn btn-outline-primary btn-sm mt-2">Leer más</a>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                </div>
              </div>
            <% } %>
          </div>

          <!-- Flechas -->
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselJornada<%= j.num %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselJornada<%= j.num %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
          </button>
        </div>
      </section>
    <% } }); %>

  </div>

  <%- include('partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
