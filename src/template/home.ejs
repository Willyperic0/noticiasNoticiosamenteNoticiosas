<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>

  <!-- Favicon del sitio -->
  <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/653/653021.png" type="image/png">

  <!-- Estilos de Bootstrap (v5.3.3) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Hoja de estilos personalizada -->
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <!-- Inclusión de componentes parciales -->
  <!-- Sidebar (barra lateral) -->
  <%- include('partials/sidebar') %>

  <!-- Header con parámetro dinámico para el título -->
  <%- include('partials/header', { headerTitle: 'Noticias noticiosamente noticiosas' }) %>

  <!-- ========================== -->
  <!-- CONTENIDO PRINCIPAL       -->
  <!-- ========================== -->
  <div class="main-content">

    <!-- ======== BUSCADOR ======== -->
    <!-- Formulario de búsqueda por título -->
    <form id="searchForm" action="/search" method="get" class="mb-4">
      <div class="input-group">
        <!-- Campo de texto con valor persistente tras búsqueda -->
        <input type="text" name="term" class="form-control" placeholder="Buscar por título..." value="<%= search || '' %>">
        <button class="btn btn-primary" type="submit">Buscar</button>
      </div>
    </form>

    <!-- ======================================= -->
    <!-- NOTICIA ALEATORIA DESTACADA (HERO)     -->
    <!-- ======================================= -->
    <% 
      // Filtra las noticias válidas (solo aquellas con imagen distinta del placeholder genérico)
      const validNews = news.filter(n => n.image && n.image !== "https://easimages.basnop.com/default-image_600.png");

      // Si existen noticias válidas, se elige una aleatoriamente para destacarla
      if (validNews.length > 0) { 
        const randomHero = validNews[Math.floor(Math.random() * validNews.length)];
    %>
      <!-- Sección "Hero" o noticia destacada -->
      <section class="hero mb-5">
        <div class="card mb-3 shadow-sm">
          <div class="row g-0">
            <!-- Imagen principal -->
            <div class="col-md-4">
              <img src="<%= randomHero.image %>" class="img-fluid rounded-start" alt="<%= randomHero.title %>">
            </div>
            <!-- Contenido textual -->
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= randomHero.title %></h5>
                <p class="card-text"><%= randomHero.content %></p>
                <p class="text-secondary small"><%= randomHero.date %></p>
                <!-- Enlace a la noticia completa -->
                <a href="/news/<%= randomHero.id %>" class="btn btn-primary btn-sm">Leer más</a>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% } %>

    <!-- ========================================== -->
    <!-- CARRUSELES AGRUPADOS POR JORNADA           -->
    <!-- ========================================== -->
    <% 
      // Definición manual de jornadas con número y fecha (simulación de grupos temáticos)
      const jornadas = [
         { num: 1, fecha: "2025-10-28" },
         { num: 2, fecha: "2025-10-29" },
         { num: 3, fecha: "2025-10-30" }
       ]; 
    %>

    <% 
      // Itera sobre cada jornada para generar un carrusel independiente
      jornadas.forEach(j => { 
         // Filtra las noticias de esa jornada (por fecha) y descarta imágenes vacías
         const noticiasJornada = news
           .filter(n => n.date === j.fecha && n.image !== "https://easimages.basnop.com/default-image_600.png")
           // Orden aleatorio (mezcla) para variar la visualización
           .sort(() => 0.5 - Math.random())
           // Limita el total de noticias a 6 por jornada
           .slice(0, 6);

         // Solo renderiza el carrusel si existen noticias disponibles
         if (noticiasJornada.length > 0) { 
    %>

      <!-- ====================== -->
      <!-- Sección de una jornada -->
      <!-- ====================== -->
      <section class="jornada-section mb-5">
        <!-- Título de la jornada -->
        <h3 class="mb-3">Jornada <%= j.num %> - <%= j.fecha %></h3>

        <!-- Carrusel Bootstrap -->
        <div id="carouselJornada<%= j.num %>" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">

            <% 
              // Divide las noticias en grupos de 3 por slide (3 columnas por fila)
              for(let i = 0; i < noticiasJornada.length; i += 3) { 
                const group = noticiasJornada.slice(i, i + 3); 
            %>
              <!-- Cada "carousel-item" representa un slide -->
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <div class="row g-4">
                  <% 
                    // Renderiza cada noticia dentro de la fila del carrusel
                    group.forEach(n => { 
                  %>
                    <div class="col-md-4 d-flex">
                      <div class="card shadow-sm flex-fill d-flex flex-column">
                        <!-- Imagen de la noticia -->
                        <img src="<%= n.image %>" class="card-img-top" style="object-fit: cover; height: 200px;" alt="<%= n.title %>">
                        <div class="card-body d-flex flex-column">
                          <!-- Título -->
                          <h5 class="card-title"><%= n.title %></h5>
                          <!-- Resumen truncado -->
                          <p class="card-text text-truncate"><%= n.summary %></p>
                          <!-- Fecha -->
                          <p class="text-secondary small mt-auto"><%= n.date %></p>
                          <!-- Enlace a detalle -->
                          <a href="/news/<%= n.id %>" class="btn btn-outline-primary btn-sm mt-2">Leer más</a>
                        </div>
                      </div>
                    </div>
                  <% }) %>
                </div>
              </div>
            <% } %>
          </div>

          <!-- ============================ -->
          <!-- Controles de navegación del carrusel -->
          <!-- ============================ -->
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselJornada<%= j.num %>" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselJornada<%= j.num %>" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
          </button>
        </div>
      </section>

    <% } }); %> <!-- Fin del forEach de jornadas -->

  </div> <!-- /main-content -->

  <!-- Inclusión del footer -->
  <%- include('partials/footer') %>

  <!-- Script de Bootstrap con funcionalidad de carrusel -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
