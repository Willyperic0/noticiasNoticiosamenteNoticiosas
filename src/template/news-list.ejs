<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <!-- estilos centralizados en /css/style.css -->
</head>

<body>

  <%- include('partials/sidebar') %>

  <!-- Header fijo (partial) -->
  <%- include('partials/header', { headerTitle: 'Noticias noticiosamente noticiosas' }) %>

  <!-- Contenido principal -->
  <div class="main-content">

    <!-- Buscador -->
    <form id="searchForm" action="/search" method="get" class="mb-4">
      <div class="input-group">
        <input type="text" name="term" class="form-control" placeholder="Buscar por título..." value="<%= search || '' %>">
        <button class="btn btn-primary" type="submit">Buscar</button>
      </div>
    </form>

    <!-- Noticias -->
    <div class="row g-4">
      <% if (news.length === 0) { %>
        <p class="text-center text-muted">No hay noticias disponibles.</p>
      <% } else { %>
        <% news.forEach(n => { %>
          <div class="col-md-4">
            <div class="card news-card shadow-sm">
              <img src="<%= n.image %>" alt="<%= n.title %>">
              <div class="card-body">
                <h5 class="card-title"><%= n.title %></h5>
                <p class="card-text"><%= n.summary %></p>
                <p class="text-secondary small mt-auto"><%= n.date %></p>
                <a href="/news/<%= n.id %>" class="btn btn-outline-primary btn-sm mt-2">Leer más</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>

  <!-- Paginación -->
  <% if (totalPages > 1) { %>
    <nav aria-label="Paginación" class="mt-5">
      <ul class="pagination justify-content-center">
        <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
          <a class="page-link"
            href="?term=<%= search || '' %>&page=<%= page - 1 %>">Anterior</a>
        </li>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= page === i ? 'active' : '' %>">
            <a class="page-link"
              href="?term=<%= search || '' %>&page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
          <a class="page-link"
            href="?term=<%= search || '' %>&page=<%= page + 1 %>">Siguiente</a>
        </li>
      </ul>
    </nav>
  <% } %>


  </div>

  <%- include('partials/footer') %>
</body>
</html>
