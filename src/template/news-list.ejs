<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f4f5f7;
      margin: 0;
      overflow-x: hidden;
    }

    /* Sidebar */
    #sidebarMenu {
      width: 220px;
      background-color: #1e1e2f;
      color: #fff;
      height: 100vh;
      position: fixed;
      top: 0;
      left: -220px; /* oculto al inicio */
      transition: left 0.3s ease;
      z-index: 200;
      padding-top: 1rem;
    }
    #sidebarMenu.show { left: 0; }
    #sidebarMenu ul { list-style: none; padding-left: 0; margin: 0; }
    #sidebarMenu .nav-link { color: #ccc; padding: 0.6rem 1rem; display: block; transition: background 0.2s; }
    #sidebarMenu .nav-link:hover { background-color: #3a3a50; color: #fff; }
    #sidebarMenu .btn-danger { width: 90%; margin: 0.5rem auto; }

    /* Overlay */
    #overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0,0,0,0.4);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s ease;
      z-index: 100;
    }
    #overlay.show { opacity: 1; pointer-events: all; }

    /* Main content */
    .main-content {
      padding: 1.5rem;
      transition: margin-left 0.3s ease;
    }

    header {
      background-color: #e63946;
      color: #fff;
      padding: 1rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-radius: 5px;
      margin-bottom: 1rem;
    }
    header h1 { font-size: 1.6rem; margin: 0; }
    header button { background: transparent; border: none; color: #fff; font-size: 1.5rem; cursor: pointer; }

    /* Search bar */
    #searchForm { margin-bottom: 1.5rem; }
    #searchForm .form-control { border-radius: 0.25rem 0 0 0.25rem; }
    #searchForm .btn-primary { border-radius: 0 0.25rem 0.25rem 0; }

    /* News cards */
    .news-card { min-height: 360px; display: flex; flex-direction: column; justify-content: space-between; border-radius: 0.5rem; overflow: hidden; box-shadow: 0 4px 10px rgba(0,0,0,0.1); background-color: #fff; }
    .news-card:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.2); }
    .news-card img { height: 180px; object-fit: cover; }
    .news-card .card-body { display: flex; flex-direction: column; justify-content: space-between; }

    /* Footer */
    footer { text-align: center; padding: 1rem; margin-top: 2rem; color: #888; font-size: 0.9rem; clear: both; }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <nav id="sidebarMenu">
    <h5 class="px-3">Men√∫</h5>
    <ul class="nav flex-column">
      <li class="nav-item"><a class="nav-link" href="/news">Home</a></li>
      <li class="nav-item"><a class="nav-link" href="/news/jornada/1">Noticias Jornada 1</a></li>
      <li class="nav-item"><a class="nav-link" href="/news/jornada/2">Noticias Jornada 2</a></li>
      <li class="nav-item"><a class="nav-link" href="/news/jornada/3">Noticias Jornada 3</a></li>
      <li class="nav-item"><a class="nav-link" href="/about">Acerca de</a></li>
      <li class="nav-item mt-3"><a class="btn btn-sm btn-danger w-100" href="/news/new">‚ûï Agregar Noticia</a></li>
    </ul>
  </nav>

  <!-- Overlay -->
  <div id="overlay"></div>

  <!-- Contenido principal -->
  <div class="main-content">
    <header>
      <button id="btn-toggle-sidebar">‚ò∞</button>
      <h1 class="Titulo">Noticias noticiosamente noticiosas</h1>
    </header>

    <!-- Search -->
    <form id="searchForm" action="/search" method="get" class="mb-4">
      <div class="input-group">
        <input type="text" name="term" class="form-control" placeholder="Buscar por t√≠tulo..." value="<%= search || '' %>">
        <button class="btn btn-primary" type="submit">Buscar</button>
      </div>
    </form>

    <!-- Noticias -->
    <div class="row g-4">
      <% if (news.length === 0) { %>
        <p class="text-center text-muted">No hay noticias disponibles.</p>
      <% } else { %>
        <% news.forEach(n => { %>
          <div class="col-md-4">
            <div class="card news-card shadow-sm">
              <img src="<%= n.image %>" class="card-img-top" alt="<%= n.title %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= n.title %></h5>
                <p class="card-text text-muted"><%= n.summary %></p>
                <p class="text-secondary small mt-auto">üìÖ <%= n.date %></p>
                <a href="/news/<%= n.id %>" class="btn btn-outline-primary btn-sm mt-2">Leer m√°s</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <footer>¬© <%= new Date().getFullYear() %> Tabl√≥n de Noticias. Inspirado en ‚ÄúThe News Reporter‚Äù.</footer>

  <script>
    const btn = document.getElementById('btn-toggle-sidebar');
    const sidebar = document.getElementById('sidebarMenu');
    const overlay = document.getElementById('overlay');

    const toggleSidebar = () => {
      sidebar.classList.toggle('show');
      overlay.classList.toggle('show');
    }

    btn.addEventListener('click', toggleSidebar);
    overlay.addEventListener('click', toggleSidebar);
  </script>
</body>
</html>
